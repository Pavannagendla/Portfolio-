  <script>
    // Function to open the image in full-screen mode
    function openImage(imageUrl) {
      var modal = document.getElementById("imageModal");
      var fullImage = document.getElementById("fullImage");

      fullImage.src = imageUrl;
      modal.style.display = "block";
    }

    // Function to close the full-screen image
    function closeImage() {
      var modal = document.getElementById("imageModal");
      modal.style.display = "none";
    }

    const onSubmit = (formData) => {
      const mailtoLink = `mailto:hackercamerawork@gmail.com?subject=${formData.subject}&body=Hi, my name is ${formData.name}. ${formData.message} (${formData.email})`;
      window.location.href = mailtoLink;
    };

    function onSubmitForm(event) {
      event.preventDefault();
      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const subject = document.getElementById("subject").value;
      const message = document.getElementById("message").value;

      const formData = { name, email, subject, message };
      // Construct the mailto link
      const mailtoLink = `mailto:hackercamerawork@gmail.com?subject=${formData.subject}&body=Hi, my name is ${formData.name}. ${formData.message} (${formData.email})`;

      // Open the user's default email client
      window.location.href = mailtoLink;
    }

    const brief = document.querySelector('.brief');

brief.addEventListener('mouseenter', () => {
  document.getElementById('brief-heading').style.display = 'none';
  document.getElementById('brief-paragraph').style.display = 'block';
});

brief.addEventListener('mouseleave', () => {
  document.getElementById('brief-heading').style.display = 'block';
  document.getElementById('brief-paragraph').style.display = 'none';
});

</script>
    

